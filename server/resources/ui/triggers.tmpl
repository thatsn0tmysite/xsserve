{{template "layout" .}}
{{define "title"}}ðŸŽ¯ Triggers{{end}}

{{define "main"}}
    <h2>ðŸŽ¯ Triggers</h2>
    <p>List of triggered payloads.</p>
    <table class="table table-dark">
        <tr>
            <th>Date</th>
            <th>Host</th>
            <th>Cookies</th>
            <th>Payload</th>
            <th>URI</th>
            <th>Screenshot</th>
            <th>Actions</th>
        </tr>
        {{range $trigger := .}}
        <tr>
            <td>{{$trigger.Date}}</td>
            <td>{{$trigger.Host}}</td>
            <td>
                <ul>
                {{range $cookie := $trigger.Cookies}}
                    <li> <b>{{$cookie.Name}}</b> = {{$cookie.Value}}</li>
                {{end}}
                </ul>
            </td>
            <td>{{$trigger.Payload.Code}}</td>
            <td><a href="{{$trigger.URI}}">{{$trigger.URI}}</a></td>
            <td><a href="/get/screenshot?id={{$trigger.ID}}"><img widht="200px" height="200px" src="/get/screenshot?id={{$trigger.ID}}"></a></td>
            <td>
                <button type="button" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="View report" onclick="window.location.href='/triggers/report?id={{$trigger.ID}}'"><i class="far fa-file-image"></i></button>
                <button type="button" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="Hijack session" onclick="window.location.href='/triggers/hijack?id={{$trigger.ID}}'"><i class="fas fa-skull"></i></button>
                <button type="button" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="Remove trigger" onclick="window.location.href='/triggers/delete?id={{$trigger.ID}}'"><i class="fas fa-trash"></i></button>
            </td>
        </tr>
        {{end}}
      </table>
{{end}}
